<h1>Create a User</h1>

<%= form_for @user do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.label "Choose Images:" %><br>


    <% Image.all.each do |image| %>
      <%= check_box_tag "user[image_ids][]", image.id, @user.image_ids.include?(image.id), id: dom_id(image) %>
      <%= label_tag dom_id(image) do%>
        <%= image_tag image.name, width: "100" %><br>
      <% end %>
    <% end %>
<br>
  <%= f.submit %>
<% end %>
