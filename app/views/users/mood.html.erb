<h1>Whats your mood</h1>

<%= form_for @user do |f| %>

  <%= f.label "Choose Images:" %><br>
    <% Image.all.each do |image| %>
      <%= check_box_tag "user[image_ids][]", image.id, @user.image_ids.include?(image.id), id: dom_id(image) %>
      <%= label_tag dom_id(image) do%>
        <%= image_tag image.name, width: "200" %><br>
      <% end %>
    <% end %>
    <br>

  <%= f.submit "Update Your Mood" %>
<% end %>
