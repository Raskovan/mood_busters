<div class="container">
  <div class="">
    <p class="display-4">Edit the Image</p>
  </div>

  <div class="class="form-inline"">
  <%= form_for @image do |f| %>
    <%= f.label "Image Name" %>
    <%= f.text_field :name, class: "form-control mb-2 mr-sm-2" %>
    <%= f.collection_select :mood_id, Mood.all, :id, :name %>
    <%= f.submit nil, class: "btn btn-primary mb-2" %>
  <% end %>
  </div>
</div>
